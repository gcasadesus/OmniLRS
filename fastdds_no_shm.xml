<?xml version="1.0" encoding="UTF-8" ?>
<profiles xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
    <transport_descriptors>
        <transport_descriptor>
            <transport_id>udp_transport</transport_id>
            <type>UDPv4</type>
        </transport_descriptor>
    </transport_descriptors>

    <participant profile_name="participant_profile_no_shm" is_default_profile="true">
        <rtps>
            <userTransports>
                <transport_id>udp_transport</transport_id>
            </userTransports>
            <useBuiltinTransports>false</useBuiltinTransports>
            <builtin>
                <!-- Whitelist the specific interface to prevent binding ambiguity -->
                <initialPeersList>
                    <locator>
                        <udpv4>
                            <address>127.0.0.1</address>
                        </udpv4>
                    </locator>
                    <locator>
                        <udpv4>
                            <address>171.64.167.56</address>
                        </udpv4>
                    </locator>
                </initialPeersList>
                <!-- Ensure discovery still works -->
                <discovery_config>
                    <ignoreParticipantFlags>FILTER_DIFFERENT_HOST</ignoreParticipantFlags>
                </discovery_config>
            </builtin>
        </rtps>
    </participant>
</profiles>
